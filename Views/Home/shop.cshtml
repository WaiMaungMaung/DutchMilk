@model IEnumerable<Product>
@{
}
<h1>Shopping</h1>
Count:<p>@Model.Count()</p>
      <div class="row mb-5 box-shadow rounded bg-white">
          @foreach (var p in Model)
          {
          <div class="col-md-3 mb-3 box-shadow  p-2">
              <img src="~/img/@(p.ArtId).jpg" alt="Alternate Text" class="img-fluid rounded" />

              <h3 class="text-info">@p.Category-@p.Size</h3>
              <ul>
                  <li>Price: @p.Price</li>

                  <li>Artist: @p.Artist</li>
                  <li>Title: @p.Title</li>
                  <li> @p.ArtDescription</li>
              </ul>
              <input type="button" name="name" value="Add" />
          </div>
          }
      </div>