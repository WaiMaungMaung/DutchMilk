@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    
}
<div class="offset-md-3 col-md-6 bg-dark p-3  text-white">
<form method="post">
    <div asp-validation-summary="All" class="text-danger">

    </div>
    <div class="form-group">
        <label asp-for="Name" >Name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <div class="form-group">

        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <br />
    </div>

    <div class="form-group">

        <label asp-for="Subject">Subjext</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>

        <br />
    </div>

    <div class="form-group">

        <label asp-for="Message">Message:</label>
        <textarea rows="4" asp-for="Message" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
        <br />
    </div>

    <button type="submit" class="text-info"> <i class="fa fa-envelope"></i> Send Message </button>
    <div>@ViewBag.UserMessage</div>
</form>
</div>